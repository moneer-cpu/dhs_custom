<odoo>
    <record id="view_partner_form_inherit_nphies" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.nphies</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- إضافة الحقول بعد Reference -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="nphies"/>
                <field name="contract_no"/>
                <field name="cchi"/>
                <field name="region"/>
            </xpath>
            <xpath expr="//field[@name='region']" position="attributes">
                <attribute name="required">[('company_type', '=', True)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
