<odoo>
    <record id="view_partner_form_inherit_nphies" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.nphies</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <!-- إضافة الحقول بعد Reference -->
            <xpath expr="//field[@name='ref']" position="after">
                <field name="nphies" modifiers='{"invisible": [["customer_rank", "=", 0]]}'/>
                <field name="contract_no" modifiers='{"invisible": [["customer_rank", "=", 0]]}'/>
                <field name="cchi" modifiers='{"invisible": [["customer_rank", "=", 0]]}'/>
            </xpath>

        </field>
    </record>
</odoo>
