<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_account_invoice_document_inherit" inherit_id="account.report_invoice_document">

        <xpath expr="//div[@name='shipping_address_block']/ancestor::div[@class='row'][1]" position="replace"/>

        <xpath expr="//t[@t-set='layout_document_title']" position="replace">
            <t/>
        </xpath>

        <xpath expr="//div[@id='informations']" position="replace">
            <div/>
        </xpath>


        <xpath expr="//table[contains(@class, 'table')]" position="before">
            <t t-set="layout_document_title">
                <span t-if="not proforma"></span>
                <span t-else="">PROFORMA</span>
                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                <span t-elif="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                <span t-elif="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                <span t-elif="o.move_type == 'out_refund' and o.state == 'posted'">Credit Note</span>
                <span t-elif="o.move_type == 'out_refund' and o.state == 'draft'">Draft Credit Note</span>
                <span t-elif="o.move_type == 'out_refund' and o.state == 'cancel'">Cancelled Credit Note</span>
                <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
            </t>
            <div class="row mb-3">
                <div>
                    <span style="width: 180px; display: inline-block;">TO</span>
                    <span style="margin-left:60px;" t-field="o.partner_id"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">إلى</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <span style="width: 180px; display: inline-block;">LOCATION</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.street"/>
                    <span t-field="o.partner_id.street2"/>
                    <span t-field="o.partner_id.city"/>
                    <span t-field="o.partner_id.country_id"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">العنوان</span>
                </div>

                <div class="col">
                    <span style="width: 180px; display: inline-block;">INVOICE NO.</span>
                    <span style="margin-left:60px;" t-field="o.name"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">رقم الفاتورة</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <span style="width: 180px; display: inline-block;">CONTACT PERSON</span>
                    <span style="margin-left:60px;" t-field="o.invoice_user_id"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">الشخص المسؤول</span>
                </div>

                <div class="col">
                    <span style="width: 180px; display: inline-block;">CLIENT REFERENCE</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.ref"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">رقم مرجع العميل</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <span style="width: 180px; display: inline-block;">CONTACT NO.</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.phone"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">رقم التواصل</span>
                </div>

                <div class="col">
                    <span style="width: 180px; display: inline-block;">DUE DATE</span>
                    <span style="margin-left:60px;" t-field="o.invoice_date_due"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">تاريخ الاستحقاق</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <span style="width: 180px; display: inline-block;">EMAIL ADDRESS</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.email"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">عنوان البريد الالكتروني</span>
                </div>

                <div class="col">
                    <span style="width: 180px; display: inline-block;">CONTRACT REFERENCE</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.contract_no"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">اتفاقية مرجع</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <span style="width: 180px; display: inline-block;">VAT REGISTRATION NO.</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.vat"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">ضريبة القيمة المضافة الرقم الضريبي</span>
                </div>

                <div class="col">
                    <span style="width: 180px; display: inline-block;">DHS CODE</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.email"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">كود الشركة</span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col">
                    <span style="width: 180px; display: inline-block;">NPHIES ID</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.nphies"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">رقم نفيس</span>
                </div>

                <div class="col">
                    <span style="width: 180px; display: inline-block;">CHI CODE</span>
                    <span style="margin-left:60px;" t-field="o.partner_id.cchi"/>
                    <br/>
                    <span style="width: 180px; display: inline-block;">رقم اعتماد مجلس الضمان الصحي</span>
                </div>
            </div>
        </xpath>

    </template>
</odoo>
