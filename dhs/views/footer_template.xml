<odoo>
    <data>
        <template id="website_footer_custom" inherit_id="website.layout" name="Custom Website Footer">
            <xpath expr="//footer" position="replace">
                <footer class="footer-wrapper footer-layout1"
                        t-attf-data-bg-src="/dhs/static/src/img/bg/footer_bg_1.jpg">
                    <div class="container z-index-common">
                        <div class="newsletter-wrap">
                            <div class="newsletter-content">
                                <h2 class="sec-title" t-editable="true">Subscribe for newsletter</h2>
                            </div>
                            <form class="newsletter-form">
                                <div class="form-group">
                                    <input class="form-control" type="email" placeholder="Email Address" required=""/>
                                </div>
                                <button type="submit" class="th-btn shadow-1">Subscribe</button>
                            </form>
                        </div>
                    </div>

                    <div class="widget-area">
                        <div class="container">
                            <div class="row justify-content-between">
                                <div class="col-md-6 col-xl-auto">
                                    <div class="widget footer-widget">
                                        <div class="th-widget-about">
                                            <div class="about-logo">
                                                <a href="/">
                                                    <img t-att-src="'/dhs/static/src/img/logo-footer.svg'"
                                                         alt="FIX EAT"/>
                                                </a>
                                            </div>
                                            <p class="about-text" t-editable="true">
                                                Subscribe to our newsletter today to receive the latest updates and
                                                offers.
                                            </p>
                                            <p class="footer-info" t-editable="true">
                                                <i class="fal fa-location-dot"></i>
                                                2478 Street City, Riyadh, Saudi Arabia
                                            </p>
                                            <p class="footer-info">
                                                <i class="fal fa-envelope"></i>
                                                <a href="mailto:info@fixeat.com" class="info-box_link"
                                                   t-editable="true">info@fixeat.com
                                                </a>
                                            </p>
                                            <p class="footer-info">
                                                <i class="fal fa-phone"></i>
                                                <a href="tel:+966500000000" class="info-box_link" t-editable="true">+966
                                                    50 000 0000
                                                </a>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-xl-auto">
                                    <div class="widget widget_nav_menu footer-widget">
                                        <h3 class="widget_title" t-editable="true">Quick Links</h3>
                                        <div class="menu-all-pages-container">
                                            <ul class="menu">
                                                <li>
                                                    <a href="/about-us">About Us</a>
                                                </li>
                                                <li>
                                                    <a href="/terms">Terms of Use</a>
                                                </li>
                                                <li>
                                                    <a href="/services">Our Services</a>
                                                </li>
                                                <li>
                                                    <a href="/faq">Help &amp; FAQs</a>
                                                </li>

                                                <li>
                                                    <a href="/blog">Blog</a>
                                                </li>
                                                <li>
                                                    <a href="/privacy">Privacy Policy</a>
                                                </li>
                                                <li>
                                                    <a href="/contact">Contact Us</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-xl-auto">
                                    <div class="widget widget_nav_menu footer-widget">
                                        <h3 class="widget_title" t-editable="true">Popular Services</h3>
                                        <div class="menu-all-pages-container">
                                            <ul class="menu">
                                                <li>
                                                    <a href="/services/cardiology">Cardiology Care</a>
                                                </li>
                                                <li>
                                                    <a href="/services/urgent">Urgent Care</a>
                                                </li>
                                                <li>
                                                    <a href="/services/orthopedic">Orthopedic Care</a>
                                                </li>
                                                <li>
                                                    <a href="/services/diagnosis">Diagnosis Department</a>
                                                </li>
                                                <li>
                                                    <a href="/services/gastro">Gastroenterology</a>
                                                </li>
                                                <li>
                                                    <a href="/services/therapy">Therapy Department</a>
                                                </li>
                                                <li>
                                                    <a href="/services/dental">Dental Service</a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 col-xl-auto">
                                    <div class="widget footer-widget">
                                        <h3 class="widget_title" t-editable="true">Recent Posts</h3>
                                        <div class="recent-post-wrap">
                                            <div class="recent-post">
                                                <div class="media-img">
                                                    <a href="/blog/post-1">
                                                        <img t-att-src="'/dhs/static/src/img/blog/recent-post-2-1.jpg'"
                                                             alt="Blog Image"/>
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="post-title">
                                                        <a class="text-inherit" href="/blog/post-1" t-editable="true">
                                                            How Business Is Taking Over &amp; What to Do About It
                                                        </a>
                                                    </h4>

                                                    <div class="recent-post-meta">
                                                        <a href="/blog"><i class="fal fa-calendar"></i>21 Jun, 2024
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="recent-post">
                                                <div class="media-img">
                                                    <a href="/blog/post-2">
                                                        <img t-att-src="'/dhs/static/src/img/blog/recent-post-2-2.jpg'"
                                                             alt="Blog Image"/>
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="post-title">
                                                        <a class="text-inherit" href="/blog/post-2" t-editable="true">
                                                            Health vs. Wealth: Navigate Business in Medicine
                                                        </a>
                                                    </h4>
                                                    <div class="recent-post-meta">
                                                        <a href="/blog"><i class="fal fa-calendar"></i>22 Jun, 2024
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="copyright-wrap">
                        <div class="container">
                            <div class="row gy-2 align-items-center">
                                <div class="col-md-7">
                                    <p class="copyright-text" t-editable="true">
                                        Â© 2025 FIX EAT. All Rights Reserved.
                                    </p>
                                </div>
                                <div class="col-md-5 text-center text-md-end">
                                    <div class="th-social">
                                        <a href="https://www.facebook.com/">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>
                                        <a href="https://www.twitter.com/">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                        <a href="https://www.linkedin.com/">
                                            <i class="fab fa-linkedin-in"></i>
                                        </a>
                                        <a href="https://www.whatsapp.com/">
                                            <i class="fab fa-whatsapp"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </xpath>
        </template>
    </data>
</odoo>
