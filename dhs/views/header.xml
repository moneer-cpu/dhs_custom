<odoo>
    <data>
        <!-- Custom Website Header -->
        <template id="website_header_custom" inherit_id="website.layout" name="Custom Website Header">
            <!-- إزالة الهيدر الافتراضي بالكامل -->
            <xpath expr="//header" position="replace">
                <header class="th-header header-layout1">

                    <!-- Header Top -->
                    <div class="header-top">
                        <div class="container">
                            <div class="row justify-content-center justify-content-lg-between align-items-center gy-2">
                                <div class="col-auto d-none d-lg-block">
                                    <div class="header-links">
                                        <ul>
                                            <li class="d-none d-sm-inline-block">
                                                <i class="fad fa-phone icon-btn"></i>
                                                <b>Phone:</b>
                                                <a href="tel:+1636543569">+163-654-3569</a>
                                            </li>
                                            <li class="d-none d-sm-inline-block">
                                                <i class="fad fa-envelope icon-btn"></i>
                                                <b>Email:</b>
                                                <a href="mailto:info@mediax.com">info@mediax.com</a>
                                            </li>
                                            <li class="d-none d-xxl-inline-block">
                                                <i class="fas fa-location-dot icon-btn"></i>
                                                1 Barnes Jewish Hospital Plaza, United States
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="col-auto">
                                    <div class="header-links">
                                        <ul>
                                            <li class="d-none d-md-inline-block">
                                                <div class="dropdown-link">
                                                    <a class="dropdown-toggle" data-bs-toggle="dropdown">
                                                        <img t-att-src="'/dhs/static/src/img/icon/english.png'"
                                                             alt="icon"/>
                                                        English
                                                    </a>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <a href="#">German</a>
                                                            <a href="#">French</a>
                                                            <a href="#">Italian</a>
                                                            <a href="#">Latvian</a>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </li>

                                            <li>
                                                <div class="social-links">
                                                    <span class="social-title">Follow Us On:</span>
                                                    <a href="#">
                                                        <i class="fab fa-facebook-f"></i>
                                                    </a>
                                                    <a href="#">
                                                        <i class="fab fa-twitter"></i>
                                                    </a>
                                                    <a href="#">
                                                        <i class="fab fa-linkedin-in"></i>
                                                    </a>
                                                    <a href="#">
                                                        <i class="fab fa-instagram"></i>
                                                    </a>
                                                    <a href="#">
                                                        <i class="fab fa-youtube"></i>
                                                    </a>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sticky Wrapper -->
                    <div class="sticky-wrapper">
                        <div class="menu-area">
                            <div class="container">
                                <div class="row align-items-center justify-content-between">

                                    <!-- Editable Logo -->
                                    <div class="col-auto">
                                        <div class="header-logo">
                                            <a href="/">
                                                <img t-att-src="'data:image/png;base64,%s' % website.logo"
                                                     t-att-data-oe-model="'website'"
                                                     t-att-data-oe-id="website.id"
                                                     t-att-data-oe-field="'logo'"
                                                     alt="Website Logo"
                                                     class="img-fluid"/>
                                            </a>
                                        </div>
                                    </div>

                                    <!-- Menu -->
                                    <div class="col-auto d-none d-lg-inline-block">
                                        <nav class="main-menu d-none d-lg-inline-block">
                                            <ul>
                                                <li>
                                                    <a href="/home">Home</a>
                                                </li>
                                                <li>
                                                    <a href="#">About Us</a>
                                                </li>
                                                <li class="menu-item-has-children">
                                                    <a href="#">Service</a>
                                                    <ul class="sub-menu">
                                                        <li>
                                                            <a href="#">Service</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Service Details</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li class="menu-item-has-children">
                                                    <a href="#">Pages</a>
                                                    <ul class="sub-menu">
                                                        <li>
                                                            <a href="#">Shop</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Team</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Appointments</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Faq</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Pricing</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Error Page</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li class="menu-item-has-children">
                                                    <a href="#">Blog</a>
                                                    <ul class="sub-menu">
                                                        <li>
                                                            <a href="#">Blog</a>
                                                        </li>
                                                        <li>
                                                            <a href="#">Blog Details</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                                <li>
                                                    <a href="#">Contact</a>
                                                </li>
                                            </ul>
                                        </nav>
                                    </div>

                                    <!-- Buttons -->
                                    <div class="col-auto">
                                        <div class="header-button">
                                            <button class="icon-btn searchBoxToggler d-none d-xl-inline-block">
                                                <i class="far fa-search"></i>
                                            </button>
                                            <button class="icon-btn sideMenuCart">
                                                <span class="badge">5</span>
                                                <i class="fa-solid fa-cart-shopping"></i>
                                            </button>
                                            <a href="#" class="th-btn">Appointment Now</a>
                                            <button class="icon-btn sideMenuInfo d-none d-xl-inline-block">
                                                <i class="far fa-bars"></i>
                                            </button>
                                            <button class="th-menu-toggle d-block d-lg-none">
                                                <i class="far fa-bars"></i>
                                            </button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>

                </header>
            </xpath>
        </template>
    </data>
</odoo>
