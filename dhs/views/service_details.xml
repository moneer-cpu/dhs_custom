        <!-- ================================== -->
        <!-- Website Route for the New Page -->
        <!-- ================================== -->
        <record id="service_details_page_route" model="website.page">
            <field name="name">Service Details</field>
            <field name="url">/service_details</field>
            <field name="view_id" ref="dhs.service_details_page"/>
            <field name="website_published" eval="True"/>
        </record>

    </data>
</odoo>
