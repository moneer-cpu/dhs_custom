<odoo>
    <record id="view_company_form_inherit_stamp" model="ir.ui.view">
        <field name="name">res.company.form.inherit.stamp</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">

            <!-- داخل مجموعة السوشيال ميديا، بعد حقل TikTok -->
            <xpath expr="//group[@name='social_media']" position="after">
                <group string="">
                    <field name="stamp" widget="signature" options="{'full_name': 'name', 'size': ['',200]}"/>
                </group>

            </xpath>

        </field>
    </record>
</odoo>
